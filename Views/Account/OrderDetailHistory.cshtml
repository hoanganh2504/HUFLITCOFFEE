@model HUFLITCOFFEE.Models.Main.OrderDetailViewModel;
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss/dist/tailwind.min.css">
</head>

<body class="bg-gray-100 font-sans">
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-2xl font-semibold mb-4">Order Details (Order ID: <span id="order-id"></span>)</h1>

        <div class="mb-8 border rounded-lg shadow-md p-4">
            <h2 class="text-xl font-medium mb-2">Customer Information</h2>
            <ul class="list-disc pl-4">
                <li id="customer-name">@Model.FullName</li>
                <li id="customer-phone">@Model.PhoneNumber</li>
            </ul>
            <h2 class="text-xl font-medium mt-4 mb-2">Order Details</h2>
            <ul class="list-disc pl-4">
                <li>Order Date: <span id="order-date">@Model.DateOrder</span></li>
                <li>Order Status: <span id="order-status">@Model.Status</span></li>
                <li>Shipping Address: <span id="shipping-address">@Model.Address</span></li>
            </ul>
        </div>

        <div class="mb-8 border rounded-lg shadow-md p-4">
            <h2 class="text-xl font-medium mb-2">Ordered Items</h2>
            <table class="w-full table-auto">
                <thead>
                    <tr class="bg-gray-200 text-sm uppercase leading-normal text-gray-600">
                        <th class="px-6 py-3 text-left">Product Name</th>
                        <th class="px-6 py-3 text-left">Topping Name</th>
                        <th class="px-6 py-3 text-left">Quantity</th>
                        <th class="px-6 py-3 text-left">Size</th>
                        <th class="px-6 py-3 text-right">Unit Price</th>
                        <th class="px-6 py-3 text-right">Subtotal</th>
                    </tr>
                </thead>
                <tbody id="order-items">
                    @if (Model.CartItems != null && Model.CartItems.Any())
                    {
                        @foreach (var item in Model.CartItems)
                        {
                            <tr>
                                <td class="px-6 py-3 text-left">@item.NameProduct</td>
                                <td class="px-6 py-3 text-left">@item.ToppingNames</td>
                                <td class="px-6 py-3 text-left">@item.Quantity</td>
                                <td class="px-6 py-3 text-left">@item.Dvt</td>
                                <td class="px-6 py-3 text-right">@item.UnitPrice</td>
                                <td class="px-6 py-3 text-right">@item.PriceProduct</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <div>
            <h2 class="text-xl font-medium mb-2">Order Summary</h2>
            <ul class="list-disc pl-4">
                <li class="font-bold text-lg mt-2">Total: <span id="order-total">@Model.Total</span></li>
            </ul>
        </div>
    </div>
</body>